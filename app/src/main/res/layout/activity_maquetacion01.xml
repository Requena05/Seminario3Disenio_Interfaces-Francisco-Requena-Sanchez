<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maquetacion01Activity"
    android:padding="25dp"
    android:background="#9575CD"
    >

<LinearLayout

    android:id="@+id/cabecera"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:background="@color/cabecera"
    android:orientation="horizontal"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:gravity="center"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nlocutor "
        android:textColor="@color/blaco"
        android:fontFamily="sans-serif"
        android:gravity="fill_vertical"
        android:padding="10dp"


        />
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/mensajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_message_24" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/baseline_settings_24" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/ness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cabecera">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:outlineSpotShadowColor="@color/black"
            android:src="@drawable/baseline_account_circle_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ness"
            android:textSize="20dp"
            android:textColor="@color/blaco"
            android:layout_margin="20dp"
            android:fontFamily="sans-serif"
            android:textFontWeight="800"

            />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/baseline_call_24"
        />



    </LinearLayout>

    <TextView
        android:id="@+id/mensajeness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bordesredondos"
        android:text="¿Desgraciado te has comido todas las papayas?"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@id/ness"
        app:layout_constraintStart_toStartOf="parent"

        />
    <LinearLayout
        android:id="@+id/solumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mensajeness">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:outlineSpotShadowColor="@color/black"
            android:src="@drawable/baseline_account_circle_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solumero"
            android:textSize="20dp"
            android:textColor="@color/blaco"
            android:layout_margin="20dp"
            android:fontFamily="sans-serif"
            android:textFontWeight="800"

            />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_call_24"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/mensajesolumero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bordesredondos"
        android:text="No habia nada mas que comer, ¿Qué es lo que deberia de haber echo ? mañana compraré nuevos"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@id/solumero"
        app:layout_constraintStart_toStartOf="parent"

        />
    <LinearLayout
        android:id="@+id/Chartido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mensajesolumero">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:outlineSpotShadowColor="@color/black"
            android:src="@drawable/baseline_account_circle_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chartido "
            android:textSize="20dp"
            android:textColor="@color/blaco"
            android:layout_margin="20dp"
            android:fontFamily="sans-serif"
            android:textFontWeight="800"

            />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_call_24"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/mensajechartido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bordesredondos"
        android:text="Chavales unos fornites o que Agregrarme soy Chartido_elmatador , constestarme no me seais "
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@id/Chartido"
        app:layout_constraintStart_toStartOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>