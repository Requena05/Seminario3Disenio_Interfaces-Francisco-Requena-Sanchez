<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maquetacion02Activity"
    android:background="#A5C2C6"

    android:padding="20dp"



    >
    <LinearLayout

        android:id="@+id/cabecera"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#2E6775"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/mensajes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:padding="10dp"/>
        <TextView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dwargon "
            android:textSize="16dp"
            android:textColor="@color/blaco"
            android:fontFamily="sans-serif"
            android:gravity="fill_vertical"
            android:padding="10dp"


            />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_search_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/opciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="#92ABAF"
       android:elevation="230dp"
        app:layout_constraintTop_toBottomOf="@id/cabecera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        tools:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:elevation="160dp"
            android:background="#C7D3E0"
            android:text="Lugares para viajar"
            android:fontFamily="sans-serif"
            android:textFontWeight="600"
            android:textSize="19dp"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

            <ImageButton
                android:id="@+id/opcion1"
                android:layout_width="0dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/paisaje2" />

            <ImageButton
                android:id="@+id/opcion2"
                android:layout_width="0dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/paisaje1"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                    <TextView
                        android:id="@+id/mensajeopcion1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ciudad de Loto"
                        android:fontFamily="sans-serif"
                        android:textSize="16dp"
                        android:padding="12dp"
                        android:layout_gravity="left"
                        android:visibility="invisible"
                    />
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/mensajeopcion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perdidos en la montaÃ±a"
                        android:fontFamily="sans-serif"
                        android:textSize="16dp"
                        android:padding="12dp"
                        android:visibility="invisible"
                        android:layout_gravity="right"
                        />


            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/opcion3"
                android:layout_width="0dp"
                android:layout_height="190dp"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/paisaje3"
                />

            <ImageButton
                android:id="@+id/opcion4"
                android:layout_width="0dp"
                android:layout_height="190dp"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/paisaje4"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/mensajeopcion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vistas Afrodisiacas"
                android:fontFamily="sans-serif"
                android:textSize="16dp"
                android:padding="12dp"
                android:layout_gravity="left"
                android:visibility="invisible"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/mensajeopcion4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Corazon del bosque"
                android:fontFamily="sans-serif"
                android:textSize="16dp"
                android:padding="12dp"
                android:visibility="invisible"
                android:layout_gravity="right"
                />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>